##### muestras################

ingreso<-sample(20000:50000,100)
ingreso<-sample(20000:50000,100)
aleatorios<-sample()
ingreso>=40000

ingreso1 <- ingreso>40000
ingreso1
aleatorios<-sample(1:10,20,replace=TRUE)
(aleatorios<-sample(1:10,20,replace=T))

##para seleccionar algun número dentro del vector

ingreso[50] ###saber el número de la posición 50
ingreso[73]###saber el número de la posición 73
ingreso[30:43] ##saber la posición del 30 al 43
ingreso[ingreso>40000]
ingreso[ingreso<22000]
ingreso[c(30,33,23)]
ingreso[ingreso>20000 & ingreso<30000]
ingreso[seq(20,50,10)]
ingreso[ingreso>20000 | ingreso<30000]

