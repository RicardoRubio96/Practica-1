b
c
d<-c(1:50,7,99) ## el "1:50" significa que pone todos los valores desde el 1 hasta el 50
length(d)
## operaciones logicas con vectores####
d>=45
d==50
d!=35

##sucesiones con operaciones

help(seq)
z<-seq(0,30,3)##primer entrada es desde donde inicia , segunda entrada hasta donde termina y 
                ##la tercer entrada cada cuando es la secuencia###

seq(by=.1,to=30,from=0)
seq(10)
seq(2,10)
secuencia<-seq(1,10,by=1)
seq(1,10000000)
